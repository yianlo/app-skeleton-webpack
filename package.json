{
  "name": "app-skeleton-webpack",
  "version": "1.0.0",
  "description": "A demo app skeleton",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "test": "NODE_ENV=test jest",
